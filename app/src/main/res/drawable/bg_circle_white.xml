<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Warna background -->
    <solid android:color="#FFFFFF" />

    <!-- Outline hitam -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Ukuran -->
    <size
        android:width="60dp"
        android:height="60dp" />

    <!-- Jarak ikon dari tepi -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
