<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
            <corners android:radius="26dp"/>
        </shape>
    </item>

    <!-- Button utama -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C03913"/> <!-- Warna merah bata -->
            <corners android:radius="26dp"/> <!-- Rounded -->
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>

</layer-list>
